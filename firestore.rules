
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- REGRAS GLOBAIS (COLLECTION GROUP) ---
    // Esta regra permite que a consulta em grupo do painel do cliente funcione.
    // Ela permite que um usuário leia QUALQUER agendamento em QUALQUER agenda,
    // desde que o clientUid no documento seja o seu próprio.
    match /{path=**}/appointments/{appointmentId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.clientUid;
    }

    // --- REGRAS PARA BARBEIROS ---
    match /barbers/{barberId} {
      // Qualquer pessoa, autenticada ou não, pode ler o perfil de um barbeiro se estiver completo.
      allow get: if resource.data.profileComplete == true || request.auth.uid == barberId;
      // Qualquer usuário logado pode listar os barbeiros para a página de agendamento.
      allow list: if request.auth != null;

      // Apenas o barbeiro pode ATUALIZAR ou DELETAR seu próprio perfil.
      // A permissão de escrita (write) foi dividida para permitir a criação de agendamentos por clientes.
      allow update, delete: if request.auth.uid == barberId;

      // --- REGRAS PARA AGENDAMENTOS (SUBCOLEÇÃO DE BARBEIROS) ---
      match /appointments/{appointmentId} {
        // O barbeiro (dono da agenda) pode ler e escrever em seus agendamentos.
        allow read, write: if request.auth.uid == barberId;
        // Um cliente só pode CRIAR um agendamento para si mesmo.
        allow create: if request.auth.uid == request.resource.data.clientUid;
      }
    }

    // --- REGRAS PARA CLIENTES ---
    match /clients/{clientId} {
      // Um cliente só pode ler ou escrever em seu próprio perfil.
      allow read, write: if request.auth.uid == clientId;
    }
  }
}
