rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /barbers/{barberId} {
      allow read: if resource.data.profileComplete == true || request.auth.uid == barberId;
      // Allow barber to update their own profile, but also allow writes to subcollections
      // by checking the request path. This is key to allowing appointment creation.
      allow write: if request.auth.uid == barberId;

      match /appointments/{appointmentId} {
        // A client can create an appointment for themselves.
        allow create: if request.auth.uid == request.resource.data.clientUid;

        // The barber can read, update, or delete any appointment in their schedule.
        allow read, update, delete: if request.auth.uid == barberId;
      }
    }

    match /clients/{clientId} {
      allow read, write: if request.auth.uid == clientId;
    }

    // This rule allows clients to run a collectionGroup query to find their own appointments
    // across all barbers.
    match /{path=**}/appointments/{appointmentId} {
      allow list: if request.query.filters[0][2] == request.auth.uid;
    }
  }
}
