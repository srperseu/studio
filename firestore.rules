rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNÇÕES AUXILIARES ---
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- REGRAS PARA BARBEIROS ---
    match /barbers/{barberId} {
      // Leitura pública de perfis completos
      allow read: if resource.data.profileComplete == true || isOwner(barberId);
      // Barbeiro só pode gerenciar o próprio perfil
      allow create, update: if isOwner(barberId);
      allow delete: if false;

      // REGRAS PARA AGENDAMENTOS (SUBCOLEÇÃO DE BARBEIROS)
      match /appointments/{appointmentId} {
        // Um cliente só pode criar um agendamento para si mesmo.
        allow create: if request.auth.uid == request.resource.data.clientUid;
        
        // Apenas o barbeiro pode atualizar ou deletar um agendamento.
        allow update, delete: if isOwner(barberId);
        
        // Um barbeiro pode ler todos os seus agendamentos, e um cliente pode ler os agendamentos que ele mesmo criou.
        // Esta regra é a que permite a consulta collectionGroup no dashboard do cliente.
        allow read: if isOwner(barberId) || request.auth.uid == resource.data.clientUid;
      }
    }

    // --- REGRAS PARA CLIENTES ---
    match /clients/{clientId} {
        // Um cliente só pode gerenciar seus próprios dados.
        allow read, create, update: if isOwner(clientId);
        allow delete: if false;
    }
  }
}
