rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNÇÕES AUXILIARES ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // --- REGRAS PARA BARBEIROS ---
    match /barbers/{barberId} {
      // Leitura: Perfis completos são públicos. O dono sempre pode ler seu perfil.
      allow read: if resource.data.profileComplete == true || isOwner(barberId);
      // Escrita: Apenas o dono pode criar/atualizar seu perfil.
      allow write: if isOwner(barberId);

      // --- REGRAS PARA AGENDAMENTOS (SUBCOLEÇÃO) ---
      match /appointments/{appointmentId} {
        // Criação: Um cliente logado só pode criar um agendamento para si mesmo.
        allow create: if isSignedIn() && isOwner(request.resource.data.clientUid);

        // Leitura: O dono da agenda (barbeiro) ou o dono do agendamento (cliente) podem ler.
        allow read: if isOwner(barberId) || isOwner(resource.data.clientUid);

        // Atualização/Deleção: Apenas o dono da agenda (barbeiro) pode modificar.
        allow update, delete: if isOwner(barberId);
      }
    }

    // --- REGRAS PARA CLIENTES ---
    match /clients/{clientId} {
      // Leitura/Escrita: Um cliente só pode gerenciar seus próprios dados.
      allow read, write: if isOwner(clientId);
    }
  }
}
