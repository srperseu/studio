
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Barbers can be read by anyone, but only the barber can write to their own profile.
    match /barbers/{barberId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == barberId;
    }

    // Appointments can be created by a logged-in client for themselves.
    // Barbers can read their own appointments.
    match /barbers/{barberId}/appointments/{appointmentId} {
      allow read: if request.auth != null && request.auth.uid == barberId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.clientUid;
      allow update, delete: if false; // Not implemented yet
    }

    // Clients can only read and write their own data.
    match /clients/{clientId} {
      allow read, write: if request.auth != null && request.auth.uid == clientId;
    }
  }
}
