
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNÇÕES AUXILIARES ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- REGRAS PARA BARBEIROS ---
    match /barbers/{barberId} {
      allow read: if true; // Perfil do barbeiro é público
      allow create, update: if isOwner(barberId);
      allow delete: if false;

      // REGRAS PARA AGENDAMENTOS (SUBCOLEÇÃO DE BARBEIROS)
      match /appointments/{appointmentId} {
        // Um usuário só pode criar um agendamento para si mesmo.
        allow create: if isSignedIn() && isOwner(request.resource.data.clientUid);
        
        // Leitura: O barbeiro pode ler tudo, e o cliente pode ler seus próprios agendamentos.
        allow read: if isOwner(barberId) || isOwner(resource.data.clientUid);
        
        // Apenas o barbeiro ou o cliente do agendamento podem deletar/atualizar.
        allow update, delete: if isOwner(barberId) || isOwner(resource.data.clientUid);
      }
    }

    // --- REGRAS PARA CLIENTES ---
    match /clients/{clientId} {
        // Um cliente só pode gerenciar seu próprio perfil.
        allow read, create, update: if isOwner(clientId);
        allow delete: if false;
    }
  }
}
