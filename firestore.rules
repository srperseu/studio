
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Barbers can be read by anyone, but only the barber can write their own profile.
    match /barbers/{barberId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == barberId;
    }

    // Appointments
    match /barbers/{barberId}/appointments/{appointmentId} {
        // A barber can read all their appointments, AND a client can read their own.
        allow read: if request.auth != null && (request.auth.uid == barberId || request.auth.uid == resource.data.clientUid);

        // A client can create an appointment for themselves
        allow create: if request.auth != null && request.auth.uid == request.resource.data.clientUid;

        // No one can update or delete for now
        allow update, delete: if false;
    }

    // Clients can only be read/written by the client themselves.
    match /clients/{clientId} {
        allow read, write: if request.auth != null && request.auth.uid == clientId;
    }
  }
}
